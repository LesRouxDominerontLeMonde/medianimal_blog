{% extends 'base.html.twig' %}

{% block title %}Carte des professionnels - Medianimal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .map-container {
            width: 100%;
            height: 70vh;
            min-height: 500px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .map-info {
            padding: 3rem 0;
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .map-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1rem;
            line-height: 1.1;
        }
        
        .map-subtitle {
            font-size: 1rem;
            color: #6b7280;
            max-width: 90%;
            margin: 0 auto;
            line-height: 1.4;
        }
        
        /* Breakpoints responsifs */
        @media (min-width: 576px) {
            .map-title {
                font-size: 2.2rem;
            }
            .map-subtitle {
                font-size: 1.1rem;
                max-width: 80%;
            }
        }
        
        @media (min-width: 768px) {
            .map-title {
                font-size: 2.6rem;
            }
            .map-subtitle {
                font-size: 1.2rem;
                max-width: 70%;
            }
        }
        
        @media (min-width: 992px) {
            .map-title {
                font-size: 3rem;
            }
            .map-subtitle {
                font-size: 1.25rem;
                max-width: 600px;
            }
        }
        
        .map-stats {
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .stat-text {
            font-size: 1.2rem;
            color: #4b5563;
            font-weight: 500;
        }
        
        .stat-number {
            color: #667eea;
            font-weight: bold;
            font-size: 2rem;
        }
        

        
        .loading-message {
            text-align: center;
            padding: 2rem;
            color: #6b7280;
        }
        
        /* Styles pour les popups de la carte */
        .map-popup {
            font-family: inherit;
            min-width: 280px;
            max-width: 350px;
        }
        
        .popup-title {
            color: #1f2937;
            margin-bottom: 1rem;
            font-weight: 600;
            font-size: 1.1rem;
        }
        
        .popup-info {
            font-size: 0.9rem;
            line-height: 1.4;
        }
        
        .popup-info p {
            margin-bottom: 0.75rem;
        }
        
        .popup-info strong {
            color: #374151;
            font-weight: 600;
        }
        
        .popup-info a {
            color: #667eea;
            text-decoration: none;
            word-break: break-all;
        }
        
        .popup-info a:hover {
            color: #5a67d8;
            text-decoration: underline;
        }
        
        /* Agrandir la croix de fermeture de la popup */
        .leaflet-popup-close-button span {
            font-size: 28px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="map-info">
        <div class="container">
            <h1 class="map-title">Carte des Professionnels</h1>
            <p class="map-subtitle">Découvrez les professionnels de la médiation animale près de chez vous</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Carte -->
                <div class="map-container" id="map-container">
                    {% if totalProfessionnels > 0 %}
                        {{ ux_map(map, {style: 'height: 100%; width: 100%;'}) }}
                    {% else %}
                        <div class="loading-message">
                            <p>Aucun professionnel n'est actuellement disponible sur la carte.</p>
                            <p><small>Les professionnels seront ajoutés progressivement.</small></p>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Statistiques -->
                <div class="map-stats mt-4">
                    <p class="stat-text">
                        Médiateurs animaliers référencés : <span class="stat-number">{{ totalProfessionnels }}</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 