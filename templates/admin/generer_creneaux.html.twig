{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <i class="fas fa-magic"></i> G√©n√©rer des cr√©neaux
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-plus me-2"></i>
                        Configuration de la journ√©e type
                    </h5>
                </div>
                <div class="card-body">
                    {# EasyAdmin g√®re automatiquement l'affichage des messages flash #}
                    
                    {# Affichage des erreurs g√©n√©rales du formulaire #}
                    {{ form_errors(form) }}
                    
                    {{ form_start(form, {'attr': {'id': 'generation-form'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.titre_defaut) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.nombre_semaines) }}
                        </div>
                    </div>
                    
                    {{ form_row(form.description_defaut) }}
                    
                    <hr>
                    
                    <h6><i class="fas fa-clock me-2"></i>Horaires de la journ√©e type</h6>
                    <div id="horaires-container" class="mb-3">
                        {# Toujours rendre les champs de la collection via Symfony #}
                        {% for horaire in form.horaires %}
                            <div class="row mb-2 horaire-row" data-index="{{ loop.index0 }}">
                                <div class="col-md-4">
                                    {{ form_widget(horaire.heure_debut, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_widget(horaire.heure_fin, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class="btn btn-danger btn-sm remove-horaire" 
                                            {% if loop.first and loop.last %}disabled title="Vous devez garder au moins un horaire"{% endif %}>
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    <button type="button" id="add-horaire" class="btn btn-secondary btn-sm mb-3">
                        <i class="fas fa-plus me-2"></i>Ajouter un horaire
                    </button>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar-week me-2"></i>Jours de la semaine</h6>
                            {{ form_widget(form.jours_semaine) }}
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar-alt me-2"></i>P√©riode</h6>
                            {{ form_row(form.date_debut) }}
                        </div>
                    </div>
                    
                    <hr>
                    
                    <h6><i class="fas fa-cog me-2"></i>Options avanc√©es</h6>
                    {{ form_row(form.ecraser_existants) }}
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" name="preview" class="btn btn-info">
                            <i class="fas fa-eye me-2"></i>
                            Pr√©visualiser
                        </button>
                        <button type="submit" class="btn btn-success" onclick="return confirm('√ätes-vous s√ªr de vouloir g√©n√©rer ces cr√©neaux ?')">
                            <i class="fas fa-check me-2"></i>
                            G√©n√©rer les cr√©neaux
                        </button>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CreneauCrudController').setAction('index') }}" 
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Retour
                        </a>
                    </div>
                    
                    {# Rendre les champs restants (notamment les champs cach√©s et tokens) #}
                    {{ form_rest(form) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Aide
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Comment utiliser cet outil ?</h6>
                    <ol class="small">
                        <li><strong>D√©finissez votre journ√©e type</strong> : Configurez le titre, la description et les horaires</li>
                        <li><strong>Choisissez les jours</strong> : S√©lectionnez les jours de la semaine concern√©s</li>
                        <li><strong>D√©finissez la p√©riode</strong> : Date de d√©but et nombre de semaines</li>
                        <li><strong>Pr√©visualisez</strong> : V√©rifiez le r√©sultat avant la g√©n√©ration</li>
                        <li><strong>G√©n√©rez</strong> : Cr√©ez tous les cr√©neaux en une fois</li>
                    </ol>
                    
                    <hr>
                    
                    <h6>Conseils</h6>
                    <ul class="small">
                        <li>Utilisez des horaires de 30 minutes par d√©faut</li>
                        <li>√âvitez les chevauchements d'horaires</li>
                        <li>Vous pourrez modifier individuellement chaque cr√©neau apr√®s g√©n√©ration</li>
                        <li>L'option "√âcraser" supprime les cr√©neaux existants aux m√™mes horaires</li>
                    </ul>
                </div>
            </div>
            
            {% if preview %}
                <div class="card mt-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-eye me-2"></i>
                            Pr√©visualisation
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong>{{ preview|length }} cr√©neaux seront cr√©√©s :</strong></p>
                        
                        {% if preview|length > 20 %}
                            <p class="text-muted">Affichage des 20 premiers cr√©neaux...</p>
                        {% endif %}
                        
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Jour</th>
                                        <th>Horaire</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for creneau in preview|slice(0, 20) %}
                                        <tr>
                                            <td>{{ creneau.date }}</td>
                                            <td>{{ creneau.jour }}</td>
                                            <td>{{ creneau.heure_debut }} - {{ creneau.heure_fin }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        {% if preview|length > 20 %}
                            <p class="text-muted small">... et {{ preview|length - 20 }} autres cr√©neaux</p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.getElementById('horaires-container');
            const addButton = document.getElementById('add-horaire');
            const form = document.getElementById('generation-form');
            let index = {{ form.horaires|length|default(0) }};
            
            if (!container || !form) {
                return;
            }
            
            // R√©cup√©rer le nom du formulaire dynamiquement
            const formName = '{{ form.vars.name }}';
            console.log('üîß Debug: Nom du formulaire =', formName);
            
            // V√©rifier la pr√©sence du token CSRF
            const csrfToken = form.querySelector('input[name="' + formName + '[_token]"]');
            console.log('üîß Debug: Token CSRF pr√©sent =', csrfToken ? 'OUI' : 'NON');
            if (csrfToken) {
                console.log('üîß Debug: Valeur du token =', csrfToken.value);
            }
            
            // Fonction pour supprimer une ligne
            function supprimerLigne(button) {
                const ligne = button.closest('.horaire-row');
                const toutesLignes = container.querySelectorAll('.horaire-row');
                
                // Supprimer seulement s'il y a plus d'une ligne
                if (toutesLignes.length > 1) {
                    ligne.remove();
                }
            }
            
            // Attacher les √©v√©nements aux boutons existants
            const boutonsExistants = container.querySelectorAll('.remove-horaire');
            boutonsExistants.forEach(function(button) {
                button.addEventListener('click', function(event) {
                    event.preventDefault();
                    event.stopPropagation();
                    supprimerLigne(this);
                });
            });
            
            // Ajouter une nouvelle ligne
            if (addButton) {
                addButton.addEventListener('click', function() {
                    const nouvelleLigne = document.createElement('div');
                    nouvelleLigne.className = 'row mb-2 horaire-row';
                    nouvelleLigne.innerHTML = `
                        <div class="col-md-4">
                            <input type="time" name="${formName}[horaires][${index}][heure_debut]" class="form-control" value="09:00" required>
                        </div>
                        <div class="col-md-4">
                            <input type="time" name="${formName}[horaires][${index}][heure_fin]" class="form-control" value="09:30" required>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-danger btn-sm remove-horaire">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    `;
                    
                    container.appendChild(nouvelleLigne);
                    
                    // Attacher l'√©v√©nement au nouveau bouton
                    const nouveauBouton = nouvelleLigne.querySelector('.remove-horaire');
                    nouveauBouton.addEventListener('click', function(event) {
                        event.preventDefault();
                        event.stopPropagation();
                        supprimerLigne(this);
                    });
                    
                    index++;
                });
            }
        });
    </script>
{% endblock %}

 